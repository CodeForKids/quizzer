<tr id="question_group_<%= question_group.id %>" data-key="<%=question_group.name%>">
  <td>
    <% if can_administer? %>
      <%= link_to question_group.name, question_group_questions_path(question_group), class: 'text' %>
    <% else %>
      <span class="text"><%= question_group.name %></span>
    <% end %>
    (<%= question_group.questions.count %> questions)
  </td>
  <td>
    <ul class="list-inline pull-right">
      <li>
        <%= link_to "Take this quiz", new_question_group_answer_group_path(question_group), class: "btn btn-primary" %>
      </li>
      <% if can_administer? %>
        <li>
          <%= link_to "Edit this quiz", question_group_questions_path(question_group), class: "btn btn-primary" %>
        </li>
        <li>
          <%= link_to "Delete", [question_group], method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, class: "btn btn-danger" %>
        </li>
      <% end %>
    </ul>
  </td>
</tr>
