<h3>Question</h3>
<%= simple_form_for [@question_group, question] do |f| %>
  <div class="row-fluid">
    <div class="span5">
      <%= f.input :type, collection: Rapidfire::QuestionForm::QUESTION_TYPES, include_blank: false, input_html: { class: "input-xlarge" } %>
      <%= f.input :question_text, as: :text, input_html: { rows: 4, class: "input-xlarge" } %>
      <%= f.input :answer, input_html: { class: "input-xlarge" } %>
      <small>Split your answer options with "," to allow multiple answers.</small>
      <%= f.input :hint, as: :text, input_html: { rows: 4, class: "input-xlarge" } %>
      <%= f.input :answer_options, as: :text, input_html: { rows: 4, class: "input-xlarge" } %>
    </div>
    <div class="span6">
      <h4>
        <strong>Other Optional Fields</strong>
      </h4>
      <hr/>
      <%= f.input :answer_presence, as: :boolean, :input_html => { :checked => true } %>
      <div class="row-fluid">
        <div class="span6">
          <%= f.input :answer_minimum_length %>
        </div>
        <div class="span6">
          <%= f.input :answer_maximum_length %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <%= f.input :answer_greater_than_or_equal_to %>
        </div>
        <div class="span6">
          <%= f.input :answer_less_than_or_equal_to %>
        </div>
      </div>
    </div>
  </div>
  <hr/>
  <%= f.submit "Save", class: "btn btn-primary btn-large" %>
<% end %>
<br>
