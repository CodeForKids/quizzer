<div class="login-screen-container">
  <div class="center-block text-center v-center">
    <div class="content">
      <div class="container">
        <div class="row" style="margin-top:20px">
          <%= image_tag('logo-white-text.png', height: '60px;') %>

          <h2>Forgot your password?</h2>

          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>

              <hr class="colorgraph">

              <div class="form-group no-margin">
                <%= f.email_field :email, class: 'form-control input-lg', autofocus: true, placeholder: "Email Address" %>
              </div>

              <br>
              <div class="form-group no-margin">
                <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg' %>
                <%= render "devise/shared/links" %>
              </div>

              <hr class="colorgraph">

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
