<div class="container">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' } do |f| %>
      <fieldset>
        <h2>Please Sign In</h2>
        <hr class="colorgraph">
        <div class="form-group no-margin">
          <%= f.input :email, required: false, autofocus: true, html: {class:'form-control input-lg', placeholder:"Email Address"} %>
        </div>
        <div class="form-group no-margin">
          <%= f.input :password, required: false, html: {class:'form-control input-lg', placeholder:"Password"} %>
        </div>
        <hr class="colorgraph">
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6">
            <a href="" class="btn btn-default">Forgot Password?</a>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

</div>
